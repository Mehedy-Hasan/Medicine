@model IEnumerable<Medicine.Entities.ReportFeedback>
@using Medicine.Common

@{
    ViewBag.Title = "Feedback";
}


<!-- Data table css -->
<link href="~/Plugins/Admin/assets/plugins/datatable/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="page-header mt-0 shadow p-3">
    <ol class="breadcrumb mb-sm-0">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home", new { Area = "Admin" })">Home </a></li>
        <li class="breadcrumb-item active" aria-current="page"> All Feedback </li>
    </ol>

</div>


<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header">
                <h2 class="mb-0"> All Feedback Information </h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered w-100 text-nowrap">
                        <thead>
                            <tr>
                                <th class="wd-25p">@Html.DisplayName("R-Name")</th>
                                <th class="wd-15p">@Html.DisplayName("R-Address")</th>
                                <th class="wd-5p">@Html.DisplayName("R-Phone")</th>
                                <th class="wd-5p">@Html.DisplayName("Shop Name")</th>
                                <th class="wd-5p">@Html.DisplayName("S-Address")</th>
                                <th class="wd-5p">@Html.DisplayName("S-Phone")</th>
                                <th class="wd-25p">@Html.DisplayNameFor(model => model.MedicineReport.Comment)</th>
                                <th class="wd-10p">@Html.DisplayNameFor(model => model.FeedbackMessage)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(model => item.MedicineReport.Complainant.Name)</td>
                                <td>@Html.DisplayFor(model => item.MedicineReport.Complainant.Address)</td>
                                <td>@Html.DisplayFor(model => item.MedicineReport.Complainant.Phone)</td>
                                <td>@Html.DisplayFor(model => item.MedicineReport.Pharmacy.Name)</td>
                                <td>@Html.DisplayFor(model => item.MedicineReport.Pharmacy.Address)</td>
                                <td>@Html.DisplayFor(model => item.MedicineReport.Pharmacy.Phone)</td>
                                <td>@Html.DisplayFor(model => item.MedicineReport.Comment)</td>
                                <td>@Html.DisplayFor(model => item.FeedbackMessage)</td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{

    <!-- Data tables -->
    <script src="~/Plugins/Admin/assets/plugins/datatable/jquery.dataTables.min.js"></script>
    <script src="~/Plugins/Admin/assets/plugins/datatable/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function (e) {
            $('#example').DataTable();
            var table = $('#example1').DataTable();
        });

    </script>
}
@model Medicine.Web.Areas.Admin.Model.CompanyPharmacyModel
    @using Medicine.Common

@{
    ViewBag.Title = "Add";
}

<!-- form Uploads -->
@*<link href="~/Plugins/Admin/assets/plugins/fileuploads/css/dropify.css" rel="stylesheet" type="text/css" />*@

<!-- Page Breadcumbs -->
<div class="page-header mt-0 shadow p-3">
    <ol class="breadcrumb mb-sm-0">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home", new { Area = "Admin" })">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Company or Pharmacy </li>
    </ol>
    @*<a href="@Url.Action("Index","Medicine")" class="btn btn-primary btn-sm btn-pill  mb-0">All Medicine</a>*@
</div>

@using (Html.BeginForm("Add", "CompanyPharmacy", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-xl-12">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="mb-0">Company or Pharmacy information</h2>
                </div>
                <div class="card-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-label">@Html.DisplayNameFor(model => model.Name)</label>
                                @Html.TextBoxFor(c => c.Name, new { @class = "form-control", @placeholder = "Name" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="form-label">@Html.DisplayNameFor(model => model.Email)</label>
                                @Html.TextBoxFor(c => c.Email, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="form-label">@Html.DisplayNameFor(model => model.Phone)</label>
                                @Html.TextBoxFor(c => c.Phone, new { @class = "form-control", @placeholder = "Phone" })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>


                        </div>
                        <div class="col-md-4">



                            <div class="form-group">
                                <label class="form-label">@Html.DisplayName("Type")</label>
                                @Html.DropDownListFor(c => c.UserRole, new SelectList(new[] { Role.Company, Role.Pharmacy }), "---Select---", new { @class = "form-control custom-select" })
                                @Html.ValidationMessageFor(model => model.UserRole, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="form-label">@Html.DisplayNameFor(model => model.Address)</label>
                                @Html.TextAreaFor(c => c.Address, new { @class = "form-control", @placeholder = "Address" })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-pill mt-4 mb-1">Submit</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

}

@section scripts{

    @Scripts.Render("~/bundles/jqueryval")
    
}
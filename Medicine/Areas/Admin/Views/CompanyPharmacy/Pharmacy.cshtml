@model IEnumerable<Medicine.Entities.User>
@using Medicine.Common

@{
    ViewBag.Title = "Index";
}


<!-- Data table css -->
<link href="~/Plugins/Admin/assets/plugins/datatable/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="page-header mt-0 shadow p-3">
    <ol class="breadcrumb mb-sm-0">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home", new { Area = "Admin" })">Home </a></li>
        <li class="breadcrumb-item active" aria-current="page"> All Pharmacy </li>
    </ol>
    <a href="@Url.Action("Add","CompanyPharmacy")" class="btn btn-primary btn-pill btn-sm mb-0">Add New Pharmacy</a>

</div>


<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header">
                <h2 class="mb-0"> All Pharmacy Information </h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered w-100 text-nowrap">
                        <thead>
                            <tr>
                                <th class="wd-25p">@Html.DisplayNameFor(model => model.Name)</th>
                                <th class="wd-25p">@Html.DisplayNameFor(model => model.Email)</th>
                                <th class="wd-25p">@Html.DisplayNameFor(model => model.Phone)</th>
                                <th class="wd-25p">@Html.DisplayNameFor(model => model.Address)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.Name)</td>
                                    <td>@Html.DisplayFor(model => item.Email)</td>
                                    <td>@Html.DisplayFor(model => item.Phone)</td>
                                    <td>@Html.DisplayFor(model => item.Address)</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{

    <!-- Data tables -->
    <script src="~/Plugins/Admin/assets/plugins/datatable/jquery.dataTables.min.js"></script>
    <script src="~/Plugins/Admin/assets/plugins/datatable/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function (e) {
            $('#example').DataTable();
            var table = $('#example1').DataTable();
        });

    </script>
}